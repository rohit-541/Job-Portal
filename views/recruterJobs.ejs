<h2>All Jobs Posted by you</h2>
<div class="d-flex">
  <%jobs.forEach((job)=>{%>
    <div class="card m-3" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%=job.designation%> at <%=job.company%> in <%=job.location%></h5>
          <p class="card-text"><%=job.description%></p>
    
          <h6>Skills required</h6>
          <ul class="list-group">
            <%job.skills.forEach((skill)=>{%>
                <li class="list-group-item m-1"><%=skill%></li>
            <%})%>
          </ul>
          
          <h6>Apply by:<%=job.deadline%></h6>
          <h6>Salary:<%=job.salary%> </h6>
          <a href="/updateJob/<%=job.id%>" class="btn btn-primary">Edit</a>
          <a href="/applicationJ/<%=user.id%>&<%=job.id%>" class="btn btn-primary m-3">Applications</a>
          <button onclick="deleteJob('<%=job.id%>','<%=user.id%>')" class="btn btn-primary">Remove</button>
        </div>
      </div>
<%})%>

</div>
<script src="/js/job-add-js.js"></script>
