<% if(msg != null){%>
<div class="alert alert-success m-3" role="alert">
    <%=msg%>
</div>
<%}%>
<% if(error != null){%>
  <div class="alert alert-danger m-3" role="alert">
      <%=error[0]%>
  </div>
  <%}%>

<form action="/login" method="post" class="form-control mr-3">
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Email address</label>
        <input type="email" name="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
      </div>
      <div class="col-auto g-3 align-items-center">
        <div class="col-auto">
          <label for="inputPassword6" class="col-form-label">Password</label>
        </div>
        <div class="col-auto">
          <input type="password" name="password" id="inputPassword6" class="form-control" aria-describedby="passwordHelpInline">
        </div>
        <div class="col-auto">
          <span id="passwordHelpInline" class="form-text">
            Must be 8-20 characters long.
          </span>
        </div>
      </div>
      <div class="d-flex col-6">
        <div class="form-check mx-3">
          <input class="form-check-input" type="radio" value="user" name="choice" id="user">
          <label class="form-check-label" for="user">
            User
          </label>
        </div>
        <div class="form-check mx-3">
          <input class="form-check-input" value="recruiter" type="radio" name="choice" id="Recruiter" checked>
          <label class="form-check-label" for="Recruiter">
            Recruiter
          </label>
        </div>
      </div>
      



      <div class="row">
          <div class="col-auto">
            <button type="submit" class="btn btn-primary mt-3">Login</button>
          </div>
          <div class="col-auto">
            <a href="/register"><button type="button" class="btn btn-primary mt-3">Register</button> </a>
          </div>
      </div>
</form>